---
import SpeakerCard from "./SpeakerCard.astro";
---

<section id="speakers" class="h-full py-32 bg-[#FFE6E6]">
  <div class="px-8 container mx-auto">
    <p class="uppercase font-medium text-center text-[#FAAB00]">speakers</p>

    <div class="relative z-50 text-center w-full space-y-4 pb-10">
      <h3
        class="text-[#050505] font-bold text-[3.5rem] max-w-5xl w-full mx-auto capitalize"
      >
        meet our speakers
      </h3>
    </div>

    <div class="grid grid-cols-center-4 gap-6">
      {[1, 2, 3, 4, 5, 6, 7].map(() => <SpeakerCard />)}
    </div>
  </div>
</section>
