---
import Icon from "./Icon.astro";
---

<header class="min-h-[60vh] pb-44 2xl:pt-20 pt- h-full">
  <div class="relative container mx-auto">
    <div class="absolute flex w-full">
      <Icon class="mx-auto" color="#57CAFFB2" icon="doodles/equality" />
      <Icon width="75" color="#EA4335" class="ml-auto" icon="doodles/plus" />
    </div>
    <div
      class="relative z-20 top-16 text-center flex items-center justify-end flex-col space-y-10"
    >
      <h1 class="font-bold text-9xl tracking-tighter text-[#050505]">
        <span> Welcome to DevFest</span>
        <span class="relative flex justify-center items-center">
          Enugu, 2024
          <Icon class="ml-4" icon="doodles/bracket" />
        </span>
      </h1>

      <p class="text-[#474747] mt-10 max-w-lg">
        Join us for thrilling sessions, workshops, and networking opportunities
        around the exciting world of technology.
      </p>

      <div class="flex gap-x-4 justify-center">
        <a
          href="https://gdg.community.dev/events/details/google-gdg-enugu-presents-devfest-enugu-2024"
          class="uppercase bg-[#050505] text-white hover:duration-300 transition-colors ease-in-out hover:bg-transparent hover:border hover:border-[#050505] hover:text-black rounded-[50px] p-4 w-44 h-auto inline-flex justify-center items-center text-center"
          >save your spot</a
        >
        <a
          href="/schedule"
          class="border border-[#050505] uppercase bg-transparent text-[#050505] hover:duration-300 transition-colors ease-in-out hover:bg-[#050505] hover:text-white rounded-[50px] p-4 w-44 h-auto inline-flex justify-center items-center text-center"
          >see schedule</a
        >
      </div>
    </div>

    <div class="absolute z-0 top-72 w-full flex">
      <Icon
        width="180"
        class="relative bottom-14"
        icon="doodles/triplecircle"
      />
      <Icon
        width="150"
        class="ml-auto relative right-40 top-20"
        icon="doodles/semicircle"
      />
    </div>
  </div>
</header>

<div class="flex justify-evenly items-center bg-[#050505] text-white h-24">
  <div class="flex items-center justify-center gap-x-2">
    <Icon icon="calendar" />
    <p>Saturday, December 7, 2024</p>
  </div>
  <div class="flex items-center justify-center gap-x-2">
    <Icon icon="location-marker" />
    <p>Hotel Sylvia Independence Avenue Enugu, 400102</p>
  </div>
  <div class="flex items-center justify-center gap-x-2">
    <Icon icon="time" />
    <p>10:30 AM â€“ 3:45 PM (GMT+1)</p>
  </div>
</div>
